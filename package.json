{
  "name": "url-shortener-qr-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "packages/database"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm --workspace @url-shortener/backend run dev",
    "dev:frontend": "npm --workspace url-shortener-qr-frontend run dev",
    "build": "npm-run-all build:database build:backend build:frontend",
    "build:database": "npm --workspace @url-shortener/database run build",
    "build:backend": "npm --workspace @url-shortener/backend run build",
    "build:frontend": "npm --workspace url-shortener-qr-frontend run build",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "npm --workspace @url-shortener/backend run test",
    "db:migrate": "npm --workspace @url-shortener/database run migrate:dev",
    "db:deploy": "npm --workspace @url-shortener/database run migrate:deploy",
    "db:generate": "npm --workspace @url-shortener/database run generate",
    "db:studio": "npm --workspace @url-shortener/database run studio"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5"
  }
}
